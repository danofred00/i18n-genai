{
  "name": "i18n-genai",
  "version": "1.0.0",
  "description": "A tool for managing language translations based on a JSON file.",
  "main": "./dist/src/index.js",
  "types": "./dist/types/index.d.ts",
  "type": "module",
  "keywords": [
    "i18n",
    "internationalization",
    "translations",
    "i18next",
    "google-genai",
    "cli",
    "i18next",
    "ai-translations",
    "tools"
  ],
  "scripts": {
    "build": "npm run build:lib && npm run build:cli",
    "build:cli": "tsup",
    "build:lib": "tsc && tsc-alias",
    "start": "tsx ./bin/cli.ts",
    "test": "cd tests && tsx ../bin/cli.ts"
  },
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.js"
    },
    "./config": {
      "import": "./dist/src/config.js",
      "require": "./dist/src/config.js"
    }
  },
  "bin": {
    "i18n-genai": "dist/bin/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "author": "Daniel Leussa (https://github.com/danofred00)",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.5.2",
    "tsc-alias": "^1.8.10",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@google/genai": "^1.20.0",
    "commander": "^14.0.1",
    "dotenv": "^17.2.2"
  },
  "repository": { 
    "type": "git",
    "url": "https://github.com/danofred00/i18n-genai.git"
  },
  "homepage": "https://github.com/danofred00/i18n-genai",
  "bugs": {
    "url": "https://github.com/danofred00/i18n-genai/issues"
  }
}
